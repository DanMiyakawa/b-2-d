<div>
  <% book.book_comments.each do |book_comment| %>
  <p>
    <%= image_tag book_comment.user.get_profile_image, size: "40" %>
    <%= book_comment.comment %>
    <% if book_comment.user == current_user %>
      <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %>
    <% end %><br>
    <%= book_comment.user.name %><%= book_comment.created_at.strftime('%Y/%m/%d') %>
  </p>
  <% end %>
</div>
<div>
  <%= form_with model: [book, book_comment], local: false do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %><br>
    <%= f.submit "送信する" %>
  <% end %>
</div>